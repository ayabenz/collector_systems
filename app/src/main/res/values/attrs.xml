<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShitTextView">
        <attr name="fonts" />
    </declare-styleable>
    <declare-styleable name="ShitButton">
        <attr name="fonts" />
    </declare-styleable>
    <declare-styleable name="ShitEditText">
        <attr name="fonts" />
    </declare-styleable>
    <declare-styleable name="ShitCheckBox">
        <attr name="fonts" />
    </declare-styleable>

    <declare-styleable name="RobotoFonts">
        <attr name="fonts" format="enum">
            <enum name="aller_regular" value="0" />
            <enum name="aller_bold" value="1" />
            <enum name="opensans_regular" value="2" />
            <enum name="opensans_bold" value="3" />
            <enum name="opensans_bold_italic" value="4" />
            <enum name="opensans_extra_bold" value="5" />
            <enum name="opensans_extra_bold_italic" value="6" />
            <enum name="opensans_semi_bold" value="7" />
            <enum name="opensans_semi_bold_italic" value="8" />
            <enum name="sourcesans_regular" value="9" />
            <enum name="sourcesans_bold" value="10" />
            <enum name="sourcesans_bold_italic" value="11" />
            <enum name="trebuchet_regular" value="12" />
            <enum name="trebuchet_bold" value="13" />
            <enum name="trebuchet_italic" value="14" />
            <enum name="trebuchet_bold_italic" value="15" />
            <enum name="felbridge_light" value="16" />
            <enum name="felbridge_bold" value="17" />
        </attr>
    </declare-styleable>


    <!-- CircularImageView for custom shape -->
    <declare-styleable name="CircularImageView">
        <!-- Specifies whether or not to draw a circular border around the image. -->
        <attr name="border" format="boolean" />
        <!-- Specifies the color of the border draw around the image. (if enabled) -->
        <attr name="border_color" format="color" />
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="border_width" format="dimension" />
        <!-- Specifies whether or not to draw a selector on this view upon touch events. -->
        <attr name="selector" format="boolean" />
        <!-- Specifies the color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="selector_color" format="color" />
        <!-- Specifies the color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="selector_stroke_color" format="color" />
        <!-- Makes the selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="selector_stroke_width" format="dimension" />
        <!-- Specifies whether or not to draw a shadow around your circular image. -->
        <attr name="shadow" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomCircularImageViewTheme">
        <attr name="circularImageViewStyle" format="reference" />
    </declare-styleable>
</resources>