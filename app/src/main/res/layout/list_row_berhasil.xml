<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="@dimen/dimen_10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:src="@drawable/berhasil"
                    android:id="@+id/pict_berhasil"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/txt_b_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/txt_b_invoice_no"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/pict_berhasil"
                    android:layout_toEndOf="@+id/pict_berhasil"
                    android:textStyle="bold"
                    android:textColor="@color/BLACK"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txt_b_mulai"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/pict_berhasil"
                android:layout_toEndOf="@+id/pict_berhasil"
                android:layout_below="@+id/txt_b_invoice_no" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txt_b_complete"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/pict_berhasil"
                android:layout_toEndOf="@+id/pict_berhasil"
                android:layout_below="@+id/txt_b_mulai" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:lines="3"
                    android:id="@+id/txt_b_hasil"
                    android:layout_below="@+id/txt_b_complete"
                    android:layout_alignLeft="@+id/pict_berhasil"
                    android:layout_toEndOf="@+id/pict_berhasil"
                    android:layout_toRightOf="@+id/pict_berhasil"
                    android:layout_alignStart="@+id/txt_b_complete" />

            </RelativeLayout>
    </ScrollView>
</LinearLayout>